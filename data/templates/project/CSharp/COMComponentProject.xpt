			//
			InitializeComponent();
			
			//
			// TODO: Add constructor code after the InitializeComponent() call.
			//
		}
        
        public void Open(string info)
        {
            System.Console.Out.WriteLine("Open");
        }
        
        public void Close()
        {
            if (this.Closing != null)
            {
                this.Closing("Done");
            }
            
            System.Console.Out.WriteLine("Close");
            
            if (this.Closed != null)
            {
                this.Closed();
            }
        }
                
